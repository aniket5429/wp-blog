{
  "extends": ["next/core-web-vitals", "next", "prettier"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["../"]
      }
    ],
    "no-console": "warn",
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "warn"],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error"
  }
